<Window x:Class="WPF_Frame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Frame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Frame Grid.Column="0" Source="Page1.xaml"
               NavigationUIVisibility="Visible" />
        <StackPanel Grid.Column="1">
            <Image Margin="10" Source="tiger.png" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="70">Previous</Button>
                <Button Width="70">Next</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
