<Window x:Class="WPF_RichTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_RichTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="100" DockPanel.Dock="Right">
            <Button Height="30" Name="btnFett" Click="btnFett_Click" Content="Fett" />
            <Button Height="30" Name="btnLoad" Click="btnLoad_Click" Content="Laden" />
            <Button Height="30" Name="btnSave" Click="btnSave_Click" Content="Speichern" />
        </StackPanel>
        <RichTextBox Name="rtbDocument" Margin="5" Background="LightGray" FontSize="18"></RichTextBox>
    </DockPanel>
</Window>
